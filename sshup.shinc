#=== FUNCTION =================================================================#
# NAME: _exit_trap
# DESCRIPTION: Exit handler function.
# PARAMETERS: Exit status.
# TODO: test, Standardise and declare local local variables and variable names.
#===============================================================================

_exit_trap()
{
  local _ec="$?"
 # if [[ $_ec != 0 && "${_showed_traceback}" != t ]]; then
 #   traceback 1
 # fi
  case $_ec in
    ${E_DEBUG_BREAKPOINT})
          echo -e "\nexiting with exit code E_DEBUG_BREAKPOINT(%s)\n" "${_ec}" 1>&2;;
    ${E_SHOULD_NEVER_GET_HERE})
          echo -e "\nexiting with exit code E_SHOULD_NEVER_GET_HERE(%s)\n" "${_ec}" 1>&2;;
    :)
          echo -e "\nexiting with exit code E_UNKNOWN(%s)\n" "${_ec}" 1>&2;;
  esac
  exit ${_ec}
}

_err_trap()
{
  local _ec="$?"
  local _cmd="${BASH_COMMAND:-unknown}"

#  traceback 1
  _showed_traceback=t

  echo "The command ${_cmd} exited with exit code ${_ec}." 1>&2

}

traceback()
{
  # Hide the traceback() call.
  local -i start=$(( ${1:-0} + 1 ))
  local -i end=${#BASH_SOURCE[@]}
  local -i i=0
  local -i j=0

  echo "Traceback (last called is first):" 1>&2
  for ((i=${start}; i < ${end}; i++)); do
    j=$(( $i - 1 ))
    local function="${FUNCNAME[$i]}"
    local file="${BASH_SOURCE[$i]}"
    local line="${BASH_LINENO[$j]}"
    echo "     ${function}() in ${file}:${line}" 1>&2
  done
}

