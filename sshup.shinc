#=== FUNCTION =================================================================#
# NAME: fnDebug                                                                #
# DESCRIPTION: Function to output debug information to stderr.                 #
# PARAMETERS:   int     debugLevel                                             #
#               int     lineNo                                                 #
#               boolean breakpoint                                             #
#               string  funcName                                               #
#                                                                              #
#==============================================================================#
fnDebug()
{
    if [[ $# -ge 1 ]] ; then
        local -i debugLevel=${1}
    else
        local -i debugLevel=255
    fi
    
    if [[ $# -ge 2 ]] ; then
        local lineNo=${2}
    else
        local lineNo=0
    fi
    
    if [[ $# -ge 3 ]] ; then
        local breakpoint=${3}
    else
        local breakpoint=false
    fi
    
    if [[ $# -ge 4 ]] ; then
        local funcName=${4}
    else
        local funcName="main"
    fi
    
    if [[ $# -ge 5 ]] ; then
        local messDebug=${5}
    else
        local messDebug=$(cat)
    fi

    local -r messPrefix="${BRIGHT}debug -$(basename "$(test -L "$0" && readlink "$0" || echo "$0")") : funcName-${funcName} : lineNo-$lineNo ${NORMAL} -- "

    if [[ ${optDebug} -ge ${debugLevel} ]] ; then
        echo -e "${messPrefix}" "${messDebug}" 1>&2

        if [[ ${breakpoint} == true ]] ; then
            echo -e "\n${BLINK}---breakpoint---${NORMAL}\n" 1>&2
            exit ${E_DEBUG_BREAKPOINT}
        fi
    fi
}

#=== FUNCTION =================================================================#
# NAME:         fnOutput                                                       #
#                                                                              #
# DESCRIPTION:  Function output <stdin> to :-                                  #
#               1.  If logging enabled, output to logfile.                     #
#                                                                              #
#               2.  If not running quietly and not verbose detail, output to   #
#               <stdout>                                                       #
#                                                                              #
#               3.  If running verbosely, output to <stdout>.                  #
#                                                                              #
# PARAMETERS:   <stdin> = Text to output.                                      #
#               ${1}    = Verbose detail (true / false).                       #
#               ${2}    = Logging (true / false).                              #
#               ${3}    = Quiet (true / false).                                #
#               ${4}    = Verbose enabled (true / false).                      #
#               ${5}    = Logfile.                                             #
#                                                                              #
# RETURNS:      nothing.                                                       #
#                                                                              #
# TODO:         1.  Format log output with date/time, bin name, etc.           #
#               2.  Add colour format to logfile                               #
#               3.  Make paramiters optional. Perhaps use getopts.             #
#==============================================================================#
#
fnOutput ()
{

    local line=""
    local -r now="$(date)"
    local -r logFormat="[$(basename "$0")] [${now}] ${BRIGHT}%s${NORMAL}\n"

    # --- Parse paramiters ----------------------------------------------------#
    if [ $# -ge 1 ] ; then
        declare verboseDetail=${1}
    else
        declare verboseDetail=false
    fi

    if [ $# -ge 2 ] ; then
        declare logging=${2}
    else
        declare logging=false
    fi

    if [ $# -ge 3 ] ; then
        declare quiet=${3}
    else
        declare quiet=false
    fi

    if [ $# -ge 4 ] ; then
        declare verbose=${4}
    else
        declare verbose=false
    fi

    if [ $# -ge 5 ] ; then
        declare logFile=${5}
    else
        logging=false
    fi

    while read line; do
 
        if [ ${logging} == true ] ; then
            printf "${logFormat}" "${line}" >> ${logFile}
        fi
 
        if [ ${quiet} == false ] ; then
            if [ ${verbose} == true ] ; then

                echo -e "${line}" >&2

            else if [ ${verboseDetail} == false ] ; then

                    echo -e "${line}" >&2
                fi
            fi

        fi
    done

    if [[ ${optDebug} -ge ${DBG_LVL_ABORT} ]] ; then 
        local dbgMess="\n"
        dbgMess="${dbgMess}${BRIGHT}debug DBG_LVL_ABORT - ${NORMAL} ${FUNCNAME} - ${BRIGHT}lineno = ${NORMAL} $LINENO\n"
        dbgMess="${dbgMess}${BRIGHT}verboseDetail = ${NORMAL}${verboseDetail}\n"
        dbgMess="${dbgMess}${BRIGHT}logging = ${NORMAL}${logging}\n"
        dbgMess="${dbgMess}${BRIGHT}quiet = ${NORMAL}${quiet}\n"
        dbgMess="${dbgMess}${BRIGHT}verbose = ${NORMAL}${verbose}\n"
        dbgMess="${dbgMess}${BRIGHT}logFile = ${NORMAL}${logFile}\n"
        dbgMess="${dbgMess}\n"
        dbgMess="${dbgMess}$(cat)\n"
        echo -e "${dbgMess}" | fnDebug ${DBG_LVL_ABORT} ${LINENO} true "${FUNCNAME}"
        exit ${E_SHOULD_NEVER_GET_HERE}
        return ${E_SHOULD_NEVER_GET_HERE}
    fi
#    if [[ ${optDebug} -ge ${DBG_LVL_OUTPUT} ]] ; then echo "debug (aborting) -  ${FUNCNAME} - lineno = $LINENO - line = ${line}" >&2 ; return 77 ; fi
}

