                    rcs=${PIPESTATUS[*]}; rc=0; for i in ${rcs}; do rc=$(($i > $rc ? $i : $rc)); done
                    if [[${rc} -gt 0]] ; then exit ${rc} ; fi
#                   if [[ ${optDebug} -ge ${DBG_LVL_ABORT} ]] ; then echo "debug (aborting) -  ${FUNCNAME} - lineno = $LINENO" >&2 ; return 77 ; fi
                fi
            fi
    
            if [ ! optWait ] ; then
